      /* Fondo de burbuja de mensaje recibido */
      --color-mensaje-enviado: #005c4b;
      /* Fondo de burbuja de mensaje enviado */
      --color-texto-oscuro: #e9edef;
      /* Color de texto principal (claro) */
      --color-texto-claro: #8696a0;
      /* Color de texto secundario (gris claro) */
      --color-gris-claro: #aebac1;
      /* Color de iconos y texto terciario */
